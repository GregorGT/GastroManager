<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="187dp"
        android:layout_height="353dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:background="@color/cardview_light_background"
        android:text="Order Details" />

    <EditText
        android:id="@+id/orderIdInputTextField"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="39dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/fetchOrderInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="80dp"
        android:text="Get" />

    <Button
        android:id="@+id/prevOrderButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="120dp"
        android:text="prev" />

    <Button
        android:id="@+id/nextOrderButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="120dp"
        android:text="next" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="240dp"
        android:visibility="visible"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/menuItemsView"
        android:layout_width="183dp"
        android:layout_height="300dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/menuItemOptionsView"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/addToOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:text="Add to Order" />

    <Button
        android:id="@+id/newOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="160dp"
        android:text="New Order" />


</RelativeLayout>